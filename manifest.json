{
  "description": "Switch toolbar bookmarks",
  "manifest_version": 2,
  "name": "bookmark-switcher",
  "version": "1.0",

  "background": {
    "scripts": ["./popup/background.js"]
  },

  "permissions": [
    "bookmarks",
    "storage"
  ],

  "browser_action": {
    "browser_style": true,
    "default_popup": "./popup/bookmark_list.html",
    "default_icon": {
      "48": "./bookmark_icon.svg",
      "96": "./bookmark_icon.svg"
    }
  }
}